{
  "info": {
    "name": "E-commerce CRUD API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "E-commerce API for Category and Product Management"
  },
  "item": [
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/categories",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "categories"]
            }
          }
        },
        {
          "name": "Get Category by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/categories/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "categories", "1"]
            }
          }
        },
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/categories",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "categories"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"category_name\": \"Sports\",\n    \"description\": \"Sports equipment and accessories\"\n}"
            }
          }
        },
        {
          "name": "Update Category",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/categories/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "categories", "1"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"category_name\": \"Updated Electronics\",\n    \"description\": \"Updated description for electronics\"\n}"
            }
          }
        },
        {
          "name": "Delete Category",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "http://localhost:3000/api/categories/4",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "categories", "4"]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/products",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "products"]
            }
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/products/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "products", "1"]
            }
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/products",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "products"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"product_name\": \"4K Monitor\",\n    \"category_id\": 1,\n    \"price\": 399.99,\n    \"stock\": 15\n}"
            }
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/products/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "products", "1"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"product_name\": \"Updated Laptop X1 Pro\",\n    \"category_id\": 1,\n    \"price\": 1499.99,\n    \"stock\": 10\n}"
            }
          }
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "http://localhost:3000/api/products/6",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "products", "6"]
            }
          }
        }
      ]
    },
    {
      "name": "File Upload",
      "item": [
        {
          "name": "Upload Excel File",
          "request": {
            "method": "POST",
            "url": {
              "raw": "http://localhost:3000/api/upload",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "upload"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "excel_file",
                  "type": "file",
                  "src": "/path/to/sample-products.xlsx",
                  "description": "Excel file with Products sheet"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}